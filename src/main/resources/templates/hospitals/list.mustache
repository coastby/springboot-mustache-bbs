{{>layouts/header}}
<div class="container my-5">
    <form action="/hospitals/filter" method="post">
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-sizing-default">주소</span>
            <input type="text" name="address" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" placeholder="주소를 입력하세요">
        </div>

<div class="my-2">
            <h4>업태종류</h4>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="보건소" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                보건소
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="보건의료원" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                보건의료원
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="보건지소" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                보건지소
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="보건진료소" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                보건진료소
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="의원" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                의원
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="조산원" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                조산원
            </label>
        </div>
</div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="치과의원" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                치과의원
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input name="types" class="form-check-input" type="checkbox" value="한의원" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                한의원
            </label>
        </div>
        <button type="submit" class="btn btn-primary my-2">Submit</button>
    </form>
</div>



<div class="container my-5">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">병원</th>
            <th scope="col">주소</th>
        </tr>
        </thead>
        <tbody>
        {{#hospitals}}
            <tr onclick="location.href='#'">
                <th scope="row">{{id}}</th>
                <td>
                    <a href="/hospitals/{{id}}">
                        {{#hospitalName}}{{hospitalName}}{{/hospitalName}}
                    </a>
                </td>
                <td>
                    {{#roadNameAddress}}{{roadNameAddress}}{{/roadNameAddress}}
                </td>
            </tr>
        {{/hospitals}}
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
            <li class="page-item" style="border: none">
                <a class="page-link">{{nowPage}}/{{totalPage}}</a>
            </li>
        </ul>
    </nav>

</div>
{{>layouts/footer}}